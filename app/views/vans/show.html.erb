<div class="page-header container">
  <%= link_to vans_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_van_path(@van), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show van</h1>
</div>

<dl class="dl-horizontal container">
  <dt>Driver:</dt>
  <dd><%= @van.driver %></dd>

  <dt>Direction:</dt>
  <dd><%= @van.direction %></dd>

  <dt>Seats available:</dt>
  <dd><%= @van.seats_available %></dd>

  <dt>Seats occupied:</dt>
  <dd><%= @van.seats_occupied %></dd>

</dl>

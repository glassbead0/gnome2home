<div class="page-header container">
  <%= link_to vans_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Schedule
  <% end %>
  <%= link_to edit_van_path(@van), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit Van
  <% end %>
  <h1>Van # <%= @van.id %></h1>
</div>

<dl class="dl-horizontal container">
  <dt>Driver:</dt>
  <dd><%= @van.driver %></dd>

  <dt>Direction:</dt>
  <dd><%= @van.direction %></dd>

  <dt>Seats available:</dt>
  <dd><%= @van.seats_available %></dd>

  <dt>Seats occupied:</dt>
  <dd><%= @van.seats_occupied %></dd>

</dl>

<div class="table-responsive container">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Date</th>
      <th>Van #</th>
      <th>Seats Left</th>
      <% if @van.direction == 'S' %>
        <th>CSU</th>
        <th>Harmony Rd</th>
        <th>Thornton</th>
        <th>Union Station</th>
      <% else %>
        <th>Union Station</th>
        <th>Thornton</th>
        <th>Harmony Rd</th>
        <th>CSU</th>
      <% end %>

    </tr>
    </thead>

    <tbody>
      <td><%= @van.stops[0].time.strftime('%a: %b %e') %></td>
      <td><%= @van.id %></td>
      <td><%= @van.seats_available %></td>

      <% @van.stops.each do |stop| %>
        <td>
          <%= stop.time.strftime('%l:%M %P') %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>


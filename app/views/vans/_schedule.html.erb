<div class="table-responsive container">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Date</th>
      <th>Van #</th>
      <th>Seats Left</th>
      <% if vans[0].direction == 'S' %>
        <th>CSU</th>
        <th>Harmony Rd</th>
        <th>Thornton</th>
        <th>Union Station</th>
      <% else %>
        <th>Union Station</th>
        <th>Thornton</th>
        <th>Harmony Rd</th>
        <th>CSU</th>
      <% end %>

    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, vans) do |van| %>
      <td><%= van.stops[0].time.strftime('%a: %b %e') %></td>
      <td><%= van.id %></td>
      <td><%= van.seats_available %></td>

      <% van.stops.each do |stop| %>
        <td>
          <%= stop.time.strftime('%l:%M %P') %>
        </td>
      <% end %>

      <% if admin_signed_in? %>
        <td><%= link_to 'Edit', edit_van_path(van) %></td>
        <td><%= link_to 'Destroy', van, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Buy Ticket', "/tickets/new?van_id=#{van.id}" %></td>
    <% else %>
        <td><%= link_to 'Buy Ticket', "/tickets/new?van_id=#{van.id}", id: "ticket_for_van_#{van.id}" %></td>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>

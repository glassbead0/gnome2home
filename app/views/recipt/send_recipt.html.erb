<style type="text/css">
  table {
    border-width: 0;
    border-style: none;
    border-color: #0000ff;
    border-collapse: collapse;
  }
  td {
    border-width: 0;
    border-style: none;
    border-color: #0000ff;
    border-collapse: collapse;
    padding: 0;
    margin: 0;
    width: 10px;
    height: 10px;
  }
  td.black { background-color: #000; }
  td.white { background-color: #fff; }
</style>

<h1>Thanks for riding Gnome2Home <%= @ticket.first_name %>!</h1>

<p>Please keep this email. When you get on the van,
either pull up this email with the below QR code, or
have your confirmation number below handy</p>

<p><strong>Confirmation Number:</strong> <%= @ticket.id %></p>

<%  @qr = RQRCode::QRCode.new( @ticket.qrcode, :size => 7, :level => :h ) %>

<table>
  <% @qr.modules.each_index do |x| %>
    <tr>
      <% @qr.modules.each_index do |y| %>
        <% if @qr.dark?(x,y) %>
          <td class="black"/>
        <% else %>
          <td class="white"/>
        <% end %>
      <% end %>
    </tr>
  <% end %>
</table>

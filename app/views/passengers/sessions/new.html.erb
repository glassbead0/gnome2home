<script>
  window.fbAsyncInit = function() {
    FB.init({
      //test version (app.domain.com:3000)
      appId      : '543717122428286',
      //live version (gnome2home.herokuapp.com
//      appID      :  '543709552429043',
      xfbml      : true,
      version    : 'v2.1'
    });
  };

  (function(d, s, id){
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) {return;}
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/sdk.js";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));
</script>

<div
class="fb-like"
data-share="true"
data-width="450"
data-show-faces="true">
</div>


<div class="page-header container">
  <h2>Log in</h2>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal container') do |f| %>
  <div class="form-group row">
    <%= f.label :email, class: 'control-label col-sm-1 col-sm-offset-1' %>
    <div class="col-sm-4">
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: 'control-label col-sm-1 col-sm-offset-1' %>
    <div class="col-sm-4">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
  <% if devise_mapping.rememberable? -%>
    <div class="col-sm-offset-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div><%= f.submit "Log In", class: 'btn btn-success btn-lg col-sm-offset-2', id: 'Log_in' %></div>
<% end %>
</div>
<div class="col-sm-offset-2">
  <%= render "passengers/shared/links" %>
</div>

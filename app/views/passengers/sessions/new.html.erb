<div class="page-header container">
  <h2>Log in</h2>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal container') do |f| %>
  <div class="form-group container">
    <%= f.label :email, class: 'control-label col-sm-2' %>
    <div class="col-sm-4">
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group container">
    <%= f.label :password, class: 'control-label col-sm-2' %>
    <div class="col-sm-4">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group container">
  <% if devise_mapping.rememberable? -%>
    <div class="col-sm-offset-2"><%= f.check_box :remember_me %>
      <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Log in", class: 'btn btn-success col-sm-offset-2' %></div>
<% end %>
</div>
<div class="col-sm-offset-2">
  <%= render "passengers/shared/links" %>
</div>

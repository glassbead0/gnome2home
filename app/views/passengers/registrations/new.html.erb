<script>
  window.fbAsyncInit = function() {
    FB.init({
      //test version (app.domain.com:3000)
      appId      : '543717122428286',
      //live version (gnome2home.herokuapp.com
//      appID      :  '543709552429043',
      xfbml      : true,
      version    : 'v2.1'
    });
  };

  (function(d, s, id){
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) {return;}
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/sdk.js";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));
</script>

<div class="page-header container">
  <h2>Sign up</h2>
</div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal') do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group row">
      <%= f.label :first_name, class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :last_name, class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :email, class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :phone, class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.text_field :phone, class: 'form-control' %>
      </div>
    </div>

    <div class="from-group row">
      <%= f.label :password, class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: '8 characters minimum'  %>
      </div>
    </div>
    <br/>

    <div class="form-group row">
      <%= f.label :password_confirmation, class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2"></div>
        <%= f.submit "Create account", class: 'btn btn-success btn-lg' %>
    </div>
  <% end %>

  <div class="col-sm-offset-2">
    <%= render "passengers/shared/links" %>
  </div>
</div>

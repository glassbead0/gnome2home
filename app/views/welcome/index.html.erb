<!-- Header Carousel -->
<header id="myCarousel" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <div class="fill" style="background-image:url('http://webcom.colostate.edu/supporting/files/2013/08/panorama_banner_donor_relations.jpg');"></div>
      <div class="carousel-caption">
        <h2 style="color: white;">Ft. Collins to Denver</h2>
      </div>
    </div>
    <div class="item">
      <div class="fill" style="background-image:url('http://paulrutherfordcreative.files.wordpress.com/2013/08/denverline.jpg');"></div>
      <div class="carousel-caption">
        <h2 style="color: white;">Direct</h2>
      </div>
    </div>
    <div class="item">
      <div class="fill" style="background-image:url('http://www.photosbygi.com/wp-content/uploads/2010/11/DSC_0100-Edit.jpg');"></div>
      <div class="carousel-caption">
        <h2 style="color: white;">Cheap</h2>
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="icon-next"></span>
  </a>
</header>


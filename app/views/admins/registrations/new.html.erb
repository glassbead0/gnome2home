<div class="page-header container">
  <h2>Create Admin Account</h2>
</div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal') do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group row">
      <%= f.label :first_name, class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :last_name, class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :email, class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="from-group row">
      <%= f.label :password, class: 'control-label col-sm-2' %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
      <div class="col-sm-4">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control'  %>
      </div>
    </div>
    <br/>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'control-label col-sm-2' %>
      <div class="col-sm-4">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>


    <div class="form-group row">
      <div class="col-sm-offset-2">
      <%= f.submit "Create Admin account", class: 'btn btn-success btn-lg' %>
      </div>
    </div>
  <% end %>

  <div class="col-sm-offset-2">
    <%= render "admins/shared/links" %>
  </div>
</div>

<%= form_for(@ticket, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @ticket.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h4>

      <ul>
      <% @ticket.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :first_name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :last_name, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, :class => "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.email_field :email, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :departs_from, :class => "col-sm-2 control-label" %>
    <div class="col-sm-3 btn btn-default">
      <%= @ticket_time %>
    </div>
    <div class="col-sm-2">
      <%= link_to vans_path, class: 'btn btn-info' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Back
      <% end %>
    </div>
  </div>
  <%= f.hidden_field :van_id, value: params[:van_id]  %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Buy Ticket', :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
